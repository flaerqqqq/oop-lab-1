<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="com.example.librarymanagementservice.LibraryController" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="New" />
                        <MenuItem mnemonicParsing="false" text="Open…" />
                        <Menu mnemonicParsing="false" text="Open Recent" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Close" />
                        <MenuItem mnemonicParsing="false" text="Save" />
                        <MenuItem mnemonicParsing="false" text="Save As…" />
                        <MenuItem mnemonicParsing="false" text="Revert" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Preferences…" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Quit" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Undo" />
                        <MenuItem mnemonicParsing="false" text="Redo" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Cut" />
                        <MenuItem mnemonicParsing="false" text="Copy" />
                        <MenuItem mnemonicParsing="false" text="Paste" />
                        <MenuItem mnemonicParsing="false" text="Delete" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Select All" />
                        <MenuItem mnemonicParsing="false" text="Unselect All" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
            <children>
                <Group fx:id="menuScene" layoutX="230.0" layoutY="46.0">
                    <children>
                        <Button fx:id="addButton" mnemonicParsing="false" onAction="#showAddBookScene" prefHeight="25.0" prefWidth="163.0" text="Add Book" />
                        <Button fx:id="deleteButton" layoutX="1.0" layoutY="39.0" mnemonicParsing="false" onAction="#showDeleteBookScene" prefHeight="25.0" prefWidth="163.0" text="Delete Book" />
                        <Button fx:id="findBookByAuthorNameButton" layoutY="190.0" mnemonicParsing="false" onAction="#showFindBookByAuthorNameScene" prefHeight="25.0" prefWidth="163.0" text="Find Book By Author Name" />
                        <Button fx:id="findBookByISBNButton" layoutX="1.0" layoutY="152.0" mnemonicParsing="false" onAction="#showFindBookByISBNScene" prefHeight="25.0" prefWidth="163.0" text="Find Book By ISBN" />
                        <Button fx:id="findAllBooksButton" layoutY="229.0" mnemonicParsing="false" onAction="#showFindAllBooksScene" prefHeight="25.0" prefWidth="163.0" text="Find All Books" />
                        <Button fx:id="updateButton" layoutY="79.0" mnemonicParsing="false" onAction="#showUpdateBookScene" prefHeight="25.0" prefWidth="163.0" text="Update Book" />
                        <Button fx:id="findBookByTitleButton" layoutY="115.0" mnemonicParsing="false" onAction="#showFindBookByTitleScene" prefHeight="25.0" prefWidth="163.0" text="Find Book By Title" />
                    </children>
                </Group>
                <AnchorPane fx:id="addBookPane" layoutX="6.0" layoutY="14.0" visible="false">
                    <children>
                        <TextField fx:id="isbnField" layoutX="203.0" layoutY="65.0" promptText="ISBN" />
                        <TextField fx:id="titleField" layoutX="202.0" layoutY="111.0" promptText="Title" />
                        <TextField fx:id="authorNameField" layoutX="202.0" layoutY="158.0" promptText="Author Name" />
                        <DatePicker fx:id="publicationDateField" layoutX="200.0" layoutY="205.0" prefHeight="25.0" prefWidth="151.0" />
                        <Label layoutX="204.0" layoutY="49.0" text="ISBN" />
                        <Label layoutX="203.0" layoutY="93.0" text="Title" />
                        <Label layoutX="204.0" layoutY="140.0" text="Author Name" />
                        <Label layoutX="202.0" layoutY="188.0" text="Publication Date" />
                        <Button layoutX="286.0" layoutY="260.0" mnemonicParsing="false" text="Add Book" onAction="#addBook" />
                        <Button layoutX="200.0" layoutY="262.0" mnemonicParsing="false" text="To Menu" onAction="#showMenuScene" />
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="deleteBookPane" layoutX="6.0" layoutY="14.0" visible="false">
                    <children>
                        <TextField fx:id="deleteIsbnField" layoutX="203.0" layoutY="65.0" promptText="ISBN" />
                        <Label layoutX="204.0" layoutY="49.0" text="ISBN" />
                        <Button layoutX="286.0" layoutY="100.0" mnemonicParsing="false" text="Delete Book" onAction="#deleteBook" />
                        <Button layoutX="200.0" layoutY="100.0" mnemonicParsing="false" text="To Menu" onAction="#showMenuScene" />
                    </children>
                </AnchorPane>
                <!-- Find Book by Author Name -->
                <AnchorPane fx:id="findBookByAuthorNamePane" layoutX="6.0" layoutY="14.0" visible="false">
                    <children>
                        <TextField fx:id="findAuthorNameField" layoutX="203.0" layoutY="65.0" promptText="Author Name" />
                        <Label layoutX="204.0" layoutY="49.0" text="Author Name" />
                        <Button layoutX="286.0" layoutY="100.0" mnemonicParsing="false" text="Find Book" onAction="#findBookByAuthorName" />
                        <Button layoutX="200.0" layoutY="100.0" mnemonicParsing="false" text="To Menu" onAction="#showMenuScene" />
                    </children>
                </AnchorPane>
                <!-- Find Book by ISBN -->
                <AnchorPane fx:id="findBookByISBNPane" layoutX="6.0" layoutY="14.0" visible="false">
                    <children>
                        <TextField fx:id="findISBNField" layoutX="203.0" layoutY="65.0" promptText="ISBN" />
                        <Label layoutX="204.0" layoutY="49.0" text="ISBN" />
                        <Button layoutX="286.0" layoutY="100.0" mnemonicParsing="false" text="Find Book" onAction="#findBookByISBN" />
                        <Button layoutX="200.0" layoutY="100.0" mnemonicParsing="false" text="To Menu" onAction="#showMenuScene" />
                    </children>
                </AnchorPane>
                <!-- Find All Books -->
                <AnchorPane fx:id="findAllBooksPane" layoutX="6.0" layoutY="14.0" visible="false">
                    <children>
                        <TableView fx:id="booksTableView" layoutX="14.0" layoutY="14.0" prefHeight="300.0" prefWidth="600.0">
                            <columns>
                                <TableColumn fx:id="isbnColumn" text="ISBN" prefWidth="150.0" />
                                <TableColumn fx:id="titleColumn" text="Title" prefWidth="150.0" />
                                <TableColumn fx:id="authorColumn" text="Author" prefWidth="150.0" />
                                <TableColumn fx:id="publicationDateColumn" text="Publication Date" prefWidth="150.0" />
                            </columns>
                        </TableView>
                        <Button layoutX="200.0" layoutY="330.0" mnemonicParsing="false" text="To Menu" onAction="#showMenuScene" />
                    </children>
                </AnchorPane>
                <!-- Update Book -->
                <AnchorPane fx:id="updateBookPane" layoutX="6.0" layoutY="14.0" visible="false">
                    <children>
                        <TextField fx:id="updateISBNField" layoutX="203.0" layoutY="65.0" promptText="ISBN" />
                        <TextField fx:id="updateTitleField" layoutX="202.0" layoutY="111.0" promptText="Title" />
                        <TextField fx:id="updateAuthorNameField" layoutX="202.0" layoutY="158.0" promptText="Author Name" />
                        <DatePicker fx:id="updatePublicationDateField" layoutX="200.0" layoutY="205.0" prefHeight="25.0" prefWidth="151.0" />
                        <Label layoutX="204.0" layoutY="49.0" text="ISBN" />
                        <Label layoutX="203.0" layoutY="93.0" text="Title" />
                        <Label layoutX="204.0" layoutY="140.0" text="Author Name" />
                        <Label layoutX="202.0" layoutY="188.0" text="Publication Date" />
                        <Button layoutX="286.0" layoutY="260.0" mnemonicParsing="false" text="Update Book" onAction="#updateBook" />
                        <Button layoutX="200.0" layoutY="262.0" mnemonicParsing="false" text="To Menu" onAction="#showMenuScene" />
                    </children>
                </AnchorPane>
                <!-- Find Book by Title -->
                <AnchorPane fx:id="findBookByTitlePane" layoutX="6.0" layoutY="14.0" visible="false">
                    <children>
                        <TextField fx:id="findTitleField" layoutX="203.0" layoutY="65.0" promptText="Title" />
                        <Label layoutX="204.0" layoutY="49.0" text="Title" />
                        <Button layoutX="286.0" layoutY="100.0" mnemonicParsing="false" text="Find Book" onAction="#findBookByTitle" />
                        <Button layoutX="200.0" layoutY="100.0" mnemonicParsing="false" text="To Menu" onAction="#showMenuScene" />
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
    </children>
</VBox>
